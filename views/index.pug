doctype html
html
    head
        title Vault
        link(rel='stylesheet' href='/static/css/bootstrap.min.css')
        link(rel='stylesheet' href='/static/css/index.css')
        script(src='/static/js/jquery-3.6.0.min.js')
        script(src='/static/js/popper.min.js')
        script(src='/static/js/bootstrap.min.js')
        script(src='/static/js/app.js')
    body
        div(id='login-view')
            div(id='center' class='container')
                input(type='text' placeholder='Username' class='m-2' id='input-username')
                br
                input(type='password' placeholder='Password' class='m-2' id='input-password')
                br
                div(class='container-fluid' class='m-2 d-flex justify-content-center')
                    button(type='button' class='btn btn-primary' class='m-2' onclick='doLogin()') Login
                    button(type='button' class='btn btn-secondary' class='m-2' onclick='doRegister()') Register
        div(id='app-view')
            div(id='action-menu')
                div(id='title') Vault
                div(class='action') My Files
                div(class='action') Shared With Me
                div(class='action-sep')
                div(class='action' onclick='startUploadFile()') Upload
            table(id='files' class='table')
        input(id='upload-input' style='display: none' type='file' name='files[]' onchange='doUploadFile(this)')
        div(style='container-fluid')
            div(id='notify' class='alert')
        div(id='fingerprint')